<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        style="@style/Layout"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivHelloWorld"
            style="@style/LayoutV1"
            android:layout_gravity="center"
            android:contentDescription="@string/image_siswa"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/tvNamaSiswa"
            style="@style/Layout"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/rian"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvSemangatBelajar"
            style="@style/Layout"
            android:text="@string/semangat_belajar_android"
            android:gravity="center"
            android:textSize="17sp"/>
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            style="@style/Layout">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/laki_laki"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
